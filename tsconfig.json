{
  "extends": "@bassist/tsconfig/base.json",
  "compilerOptions": {
    "importHelpers": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declaration": true
  },
  "include": ["scripts/**/*", "assets/**/*"],
  "exclude": ["node_modules", "figma-tokens"]
}
